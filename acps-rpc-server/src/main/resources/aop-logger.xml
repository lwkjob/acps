<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd ">


      <!-- 监控service-->
      <bean id="audience" class="com.yjy.apcs.rpc.server.aop.ServiceAop" />
       <aop:config proxy-target-class="true">
              <aop:aspect ref="audience" >
                     <aop:pointcut id="performance" expression="  execution(* com.yjy.service.report..*(..)) "/>
                     <aop:before pointcut-ref="performance" method="takeSeats"/>
                     <aop:after-returning pointcut-ref="performance" method="applaud" returning="returning"/>
                     <aop:after-throwing pointcut-ref="performance" method="afterThrowing" throwing="e"/>

              </aop:aspect>
       </aop:config>
</beans>
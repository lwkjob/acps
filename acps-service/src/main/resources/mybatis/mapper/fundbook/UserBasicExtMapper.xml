<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yjy.repository.mapper.fundbook.UserBasicExtMapper" >
  <resultMap id="BaseResultMap" type="com.yjy.common.entity.fundbook.UserBasicInfo" >
    <id     column="UserId"       property="userid"       jdbcType="BIGINT" />
    <result column="companyname"  property="companyname"  jdbcType="VARCHAR" />
    <result column="typeId"       property="typeId"       jdbcType="INTEGER" />
    <result column="CreateTime"   property="createTime"   jdbcType="BIGINT" />
  </resultMap>

  <sql id="Base_Column_List" >
   /* userbasic.Companyname Companyname,这个数据现在不显示*/
    userbasic.UserId userid,
     users.typeId typeid,
     users.CreateTime createTime
  </sql>

  <sql id="tables">
    ypzdw_busi_v3.userbasic  userbasic
    LEFT JOIN ypzdw_busi_v3.users  users
      on userbasic.userid = users.userId
  </sql>

  <select id="getUsers" resultMap="BaseResultMap" parameterType="map">
    SELECT
       <include refid="Base_Column_List"/>
    from
      <include refid="tables"/>

    <where>
      <if test=" typeid!=0">
        AND   users.typeid=#{typeid}
      </if>
      <if test=" startTime!=0">
        AND users.CreateTime &gt;= #{startTime}
      </if>
      <if test="  endTime!=0">
        AND users.CreateTime &lt;= #{endTime}
      </if>
    </where>

      <if test="  startIndex!=0 and  endIndex!=0" >
        limit #{startIndex},#{endIndex}
      </if>
  </select>

  <select id="getUsersByExample" resultMap="BaseResultMap" parameterType="map">
    SELECT
    <include refid="Base_Column_List"/>
    from
    <include refid="tables"/>

    <where>
      <if test="userBasicInfo.typeId!=null and userBasicInfo.typeId!=0">
        AND   users.typeId=#{userBasicInfo.typeId}
      </if>
      <if test="userBasicInfo.userid!=null and userBasicInfo.userid!=0">
        AND users.userid=#{userBasicInfo.userid}
      </if>
    </where>


  </select>

  <select id="getUsersByUserids" resultMap="BaseResultMap" parameterType="map">
    SELECT
    <include refid="Base_Column_List"/>
    from
    <include refid="tables"/>

    <where>
      <if test="userids!=null and userids.size>0">
        userbasic.userid in
        <foreach collection="userids" item="userid" separator="," open="(" close=")">
            #{userid}
        </foreach>
       </if>
    </where>


  </select>


</mapper>